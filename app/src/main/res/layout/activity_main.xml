<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.sagebionetworks.research.MainActivity">

    <Button
            android:text="Research Stack Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/task_alpha"
            android:onClick="onResearchStackTaskClicked"/>

    <Button
            android:text="Activity Based Task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/task_alpha"
            android:onClick="onActivityBasedTaskClicked"/>

</android.support.constraint.ConstraintLayout>